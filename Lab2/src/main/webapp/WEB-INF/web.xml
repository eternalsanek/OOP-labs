    <!-- Разрешаем все необходимые HTTP-методы для API -->
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>Allow API methods</web-resource-name>
            <url-pattern>/api/v1/*</url-pattern>
            <http-method>GET</http-method>
            <http-method>POST</http-method>
            <http-method>PUT</http-method>
            <http-method>DELETE</http-method>
            <http-method>OPTIONS</http-method>
            <http-method>HEAD</http-method>
        </web-resource-collection>
    </security-constraint>

    <!-- Основное правило — разрешаем доступ ко всем методам для нашего API -->
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>API Access</web-resource-name>
            <url-pattern>/api/v1/*</url-pattern>
        </web-resource-collection>
    </security-constraint>

</web-app>